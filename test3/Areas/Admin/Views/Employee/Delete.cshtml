@model test3.Models.EmployeeModel

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item">Main</li>
                        <li class="breadcrumb-item">Employee</li>
                        <li class="breadcrumb-item active"> Delete Employee</li>

                    </ol>
                </div>
                <h4 class="page-title">Delete Employee</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body mb-5">

                    <h3>Are you sure you want to delete this Employee?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.Employeekind)
                            </dt>

                            <dd>
                                @*@Html.DisplayFor(model => model.Employeekind)*@
                                @{ if (@Model.Employeekind == 1)
                                    {
                                        <span>writer</span>
                                    }
                                    else if (@Model.Employeekind == 2)
                                    {
                                        <span>Profreader</span>}

                                }
                            </dd>

                           
                        </dl>

                        @using (Html.BeginForm("DeleteConfirmed", "Employee", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                | @Html.ActionLink("Back to List", "Index")

                            </div>

                        }
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
