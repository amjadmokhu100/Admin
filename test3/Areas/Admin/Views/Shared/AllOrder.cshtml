@using test3.Models;
@model IEnumerable<test3.Models.OrderModel>


<h2>MyOrders</h2>

<br />
<br />
<br />
<br />
<br />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<link href="~/css/ClientPages.css" rel="stylesheet" />
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h1 class="heading-section">List Of Orders</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap">
                    <table class="table table-responsive-xl">
                        <thead>
                            <tr>
                                <th>Service</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>DeadLine</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var o in Model)
                            {
                            

                                if (o.OrderStatus == 2)
                                {
                                    <tr class="alert" role="alert">
                                        <td class="d-flex align-items-center">
                                            @*<div class="img" style="background-image:@Url.Content(o.Service.Photo)"></div>*@
                                            <div class="pl-3 email">
                                                <span>@o.ServiceId</span>
                                            </div>
                                        </td>

                                        <td>@o.Description</td>
                                        <td>@o.Price</td>
                                        <td class="status">
                                            @{

                                                if (o.OrderStatus == 2)
                                                {
                                                    <span class="active">PindingAdmin</span>
                                                }

                                            }
                                        </td>
                                        <td>@o.finishedDate</td>

                                        @*<td>
                                            <a href="@Url.Action("RequestView", "Services", new {id=o.Id})" class="btn btn-outline-primary"> View</a>




                                        </td>*@
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
