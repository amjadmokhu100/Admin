@model test3.Models.ServiceModel

@{
    ViewBag.Title = "Create Service";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item">Main</li>
                        <li class="breadcrumb-item">Services</li>
                        <li class="breadcrumb-item active"> Delete Service</li>

                    </ol>
                </div>
                <h4 class="page-title">Delete Services</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body mb-5" >

                    <h3>Are you sure you want to delete this service?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                <h3> @Html.DisplayNameFor(model => model.Name) </h3>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>


                        </dl>

                        @using (Html.BeginForm("DeleteConfirmed", "Service", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                | @Html.ActionLink("Back to List", "Index")

                            </div>

                        }
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
